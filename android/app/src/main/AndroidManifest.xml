<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.stefankussmaul.activitylog">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.TimerActivity"
            android:label="@string/timer_activity_label"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.MainActivity">

            <!-- parent activity meta-data to support 4.0 or below -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity"/>
        </activity>
        <activity android:name=".activity.AnalyticsActivity"
            android:label="@string/analytics"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.MainActivity">

            <!-- parent activity meta-data to support 4.0 or below -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity"/>
        </activity>
        <activity android:name=".activity.ViewEditLogActivity"
            android:label="@string/view_edit_log"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.MainActivity">

            <!-- parent activity meta-data to support 4.0 or below -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity"/>
        </activity>
    </application>

</manifest>
