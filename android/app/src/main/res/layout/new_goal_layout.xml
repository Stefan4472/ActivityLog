<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="New Goal"
        android:textSize="40sp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Spinner
            android:id="@+id/goal_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
        <ViewSwitcher
            android:id="@+id/goal_entry_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/time_goal_setter"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <NumberPicker
                    android:id="@+id/hour_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </NumberPicker>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours"
                    android:layout_gravity="center_vertical"/>
                <NumberPicker
                    android:id="@+id/minute_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </NumberPicker>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minutes"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/repetition_goal_setter"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <NumberPicker
                    android:id="@+id/repetition_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </NumberPicker>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Times"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
        </ViewSwitcher>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Activity"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/activity_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set For"/>
        <Spinner
            android:id="@+id/repeat_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>

        <LinearLayout
            android:id="@+id/repeat_daily_layout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/recur_mon_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Repeat Every Monday"/>
            <CheckBox
                android:id="@+id/recur_tue_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Repeat Every Tuesday" />
            <CheckBox
                android:id="@+id/recur_wed_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Repeat Every Wednesday" />
            <CheckBox
                android:id="@+id/recur_thu_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Repeat Every Thursday" />
            <CheckBox
                android:id="@+id/recur_fri_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Repeat Every Friday" />
            <CheckBox
                android:id="@+id/recur_sat_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Repeat Every Saturday" />
            <CheckBox
                android:id="@+id/recur_sun_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Repeat Every Sunday" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/repeat_weekly_layout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/recur_weekly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Repeat Weekly"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/repeat_monthly_layout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/recur_monthly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Repeat Monthly"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|end">
        <Button
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"/>
    </RelativeLayout>
</LinearLayout>